<view class="pkg"></view>
<view class="org">
    <text style="font-size:16px;font-weight:bold">{{info.org}}</text>
    <text style="font-size:14px;color:#666666;margin-left:10px" wx:if="{{info.dis > 0}}">{{info.dis}}Km</text>
    <view wx:if="{{info.from === 'org'}}" class="btn" bindtap="otherOrgs">其他机构</view>
    <view wx:if="{{info.from === 'card'}}" class="btn" bindtap="otherCards">其他套餐</view>
</view>
<view class="gap"></view>
<view class="ctn">
    <view class="weui-tab">
        <view class="weui-navbar">
            <block wx:for="{{tabs}}" wx:key="*this">
                <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                    <view class="weui-navbar__title">{{item}}</view>
                </view>
            </block>
            <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
        </view>
        <view class="weui-tab__panel">
            <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
              <view style="margin:0 auto;width:90%;font-size:16px;display: -webkit-box !important;overflow: hidden;text-overflow: ellipsis;word-break: break-all;-webkit-box-orient: vertical;-webkit-line-clamp:8;margin-top:20px">{{card.introduce}}</view>
            </view>
            <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
            <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
        </view>
    </view>
</view>
<view class="footer">
    <view style="display:inline-block;position:absolute;left:10px">
        <text style="font-size:12px;color:#F5053D">￥</text>
        <text style="font-size:18px;color:#F5053D;font-weight:bold">{{info.realprice}}</text>
        <text style="font-size:12px;color:#666666;margin-left:8px;text-decoration:line-through;">￥{{info.price}}</text>
    </view>
    <view class="submitBtn" bindtap="showModal">立即预约</view>
</view>
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
    <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
      <view class="head">
        <image id="{{card._id}}" src="{{card.images[0]}}" mode="scaleToFill"></image>
        <view class="head_txt">
          <view class="head_txt_nm" style="line-height:normal">{{card.name}}</view>
          <view class="head_txt_price" style="line-height:normal;color:#F5053D;">￥{{info.realprice?info.realprice:'0.0'}}</view>
        </view>
      </view>
      <view class="ctype">
        <view style="font-size:12px;font-weight:bold;margin-bottom:8px;">卡类别</view>
        <view>
           <view class="block {{elecard?'selected':''}}" bindtap="selectCardType" id="elecard">电子卡</view>
           <view class="block {{elecard?'':'selected'}}" style="margin-left:30px;" bindtap="selectCardType" id="entitycard">实体卡</view>
        </view>
      </view>
      <view class="num">
        <view style="font-size:12px;font-weight:bold;display:inline-block">购买数量</view>
        <view style="display:inline-block;float:right;margin-right:20px;">
          <span bindtap="numDec" style="display:inline-block;font-size:26px;margin-right:12px;">-</span>
          <span style="display:inline-block;font-size:28px;">{{count}}</span>
          <span bindtap="numAdd" style="display:inline-block;font-size:26px;margin-left:12px;">+</span>
        <view>
        </view>
      </view>
      <view class="money">
        <view style="font-size:12px;font-weight:bold;width:100%;height:24px;line-height:24px"><text>商品金额</text><text style="float:right;color:#F5053D;">￥{{totalPrice}}.0</text></view>
        <view style="font-size:12px;font-weight:bold;width:100%;height:24px;line-height:24px"><text>运费</text><text style="float:right;">￥0.0</text></view>
        <view style="font-size:12px;font-weight:bold;width:100%;height:24px;line-height:24px"><text>体检机构</text><text style="float:right;">{{info.org}}</text></view>
      </view>
      <button class="next" bindtap="next" type="default" disabled="{{!(selectedOrg && count)}}">下一步</button>
    </view>
  </view>
    

