                  <scroll-view class="list" bindscrolltolower="loadMore" scroll-y="true">
                  <view wx:if="{{o_infos}}">
                    <view class="organization_info" wx:for="{{o_infos}}" bindtap="o_detail">
                        <image bindtap="o_detail" id="{{item.oid}}" src="{{item.img}}" mode="scaleToFill"></image>
                        <view class="info" bindtap="org_detail" id="{{item.oid}}">
                          <view class="info_item" style="display:flex;flex-direction:row;align-items:center">
                            <text style="font-size:16px;font-weight:bold">{{item.o_nm}}</text>
                            <!--<text style="font-size:12px;color:#666666">{{item.people}}</text>-->
                          </view>
                          <view class="info_item" style="display:flex;flex-direction:row;align-items:center">
                            <text style="font-size:12px;color:#666666">{{item.address}}</text>
                            <!--<text style="font-size:12px;color:#666666">{{item.people}}</text>-->
                          </view>
                          <view class="info_item" style="display:flex;flex-direction:row;align-items:center">
                            <text style="font-size:12px;color:#666666">{{item.score}}分</text>
                            <text style="margin-left:10px;font-size:12px;color:#666666">{{item.distance}}Km</text>
                          </view>
                      </view>
                      <view class="bottom_price"><text style="color:#F5053D;">￥{{item.bprice}}</text>起></view>
                    </view>
                  </view>
                  <view wx:else class="weui-loadmore weui-loadmore_line"><text class="weui-loadmore__tips weui-loadmore__tips_in-line">暂无数据</text></view>
                </scroll-view>
                  <view class="weui-loadmore weui-loadmore_line">
                    <text class="weui-loadmore__tips weui-loadmore__tips_in-line">已经全部加载完毕</text>
                  </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
