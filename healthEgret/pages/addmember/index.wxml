<view class="addmember">
    <view class="item"><text class="placeholder">选填：昵称，如爸爸</text></view>
    <view class="item"><text class="placeholder">必填：真实姓名，如李明</text></view>
    <view class="item"><text class="placeholder">选填：手机号</text></view>
    <view class="item"><text class="placeholder">必填：身份证号</text></view>
    <view class="radio_g">
        <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{sexy}}">
                <radio value="{{item.value}}" checked="{{item.checked}}"/>{{item.name}}
            </label>
        </radio-group>
    </view>
    <button class="addBtn">添加成员</button>
</view>
