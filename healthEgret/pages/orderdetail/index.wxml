<!--pages/orderdetail/index.wxml-->
<!--<text>pages/orderdetail/index.wxml</text>-->
<view class="gap"></view>
<view class="ordercode">订单号：{{item.ordercode}}</view>
<view wx:if="{{!item.ctype}}">
    <view class="address"></view>
    <view class="gap"></view>
</view>
<view class="product">
    <image bindtap="detail" id="{{item.id}}" src="{{item.img}}" mode="scaleToFill"></image>
    <view class="info" bindtap="detail" id="{{item.id}}">
        <view class="info_item" style="font-weight:bold">{{item.nm}}</view>
        <view class="info_item" style="color:#8A868A;font-size:14px;">卡类别：{{item.ctype}}</view>
        <view class="info_item" style="font-size:14px">
            <text style="color:#FF4081">￥{{item.zprice}}</text>
            <text style="float:right;margin-right:20px">X{{item.num}}</text>
        </view>
    </view>
</view>
<view class="gap"></view>
<view class="project_info">
    <view class="head">体检信息</view>
    <view class="info">
        <view class="info_item"><text style="color:#9E9E9E">体检机构：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">体检地址：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">联系电话：</text><text></text></view>
    </view>
    <view class="gap"></view>
</view>
<view class="project_info">
    <view class="head">体检人信息(1)</view>
    <view class="info">
        <view class="info_item"><text style="color:#9E9E9E">体检人：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">性别：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">手机号：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">身份证：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">体检时间：</text><text></text></view>
    </view>
    <view class="gap"></view>
</view>
<view class="project_info">
    <view class="head">预约人信息</view>
    <view class="info">
        <view class="info_item"><text style="color:#9E9E9E">手机号：</text><text></text></view>
    </view>
    <view class="gap"></view>
</view>
<view class="project_info">
    <view class="head">订单信息</view>
    <view class="info">
        <view class="info_item"><text style="color:#9E9E9E">支付方式：</text><text></text></view>
        <view class="info_item" style="font-size:bolder"><text>订单金额：</text><text>￥</text></view>
        <view wx:if="{{!item.ctype}}"><view class="info_item"><text style="color:#9E9E9E">运费：</text><text></text></view></view>
        <view class="info_item"><text style="color:#9E9E9E">优惠券抵扣：-￥0</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">实付金额：</text><text style="color:#F5053D;">￥</text></view>

    </view>
    <view class="gap"></view>
</view>
<view class="project_info">
    <view class="head">其他信息</view>
    <view class="info">
        <view class="info_item"><text style="color:#9E9E9E">报告领取：</text><text></text></view>
        <view class="info_item"><text style="color:#9E9E9E">备注：</text><text>无</text></view>
    </view>
    <!--<view class="gap"></view>-->
</view>
<view style="height:90rpx;background-color:white;width:100%;"></view>
<view class="footer">
    <view class="btns">
        <text style="margin-left:22px;">总价：</text><text style="color:#F5053D;">￥{{item.count}}</text>
        <view class="btn_group">
            <button class="pay paybtn">支付</button>
            <button class="change">改期</button>
            <button class="cancal">取消</button>
        </view>
    </view>
</view>
