<view class="addFamily">
    <view class="addBtn" bindtap="addmember">
        <image src="../../images/plus.png" mode="scaleToFill" style="width:16px;height:16px;"></image>
    添加家庭成员
    </view>
</view>
<view wx:if="{{members}}">
    <view class="member" wx:for="{{members}}" wx:key="{{index}}">
        <!--<image bindtap="detail" id="{{item.id}}" src="{{item.portrait}}" mode="scaleToFill" class="portrait"></image>-->
        <text class="name" id="{{item._id}}" bindtap="detail" data-index="{{index}}" data-idcard="{{item.idcard}}">{{item.name}}</text>
        <text class="h_state" id="{{item._id}}" bindtap="detail" data-index="{{index}}" data-idcard="{{item.idcard}}">健康状况 {{item.score}}分</text>
        <image bindtap="makePhoneCall" data-telephone="{{item.telephone}}" src="../../images/telephone.png" mode="scaleToFill" class="telephone"></image>
        <image bindtap="send" data-telephone="{{item.telephone}}" src="../../images/message.png" mode="scaleToFill" class="messages"></image>
    </view>
</view>
<view class="weui-loadmore weui-loadmore_line">
        <text class="weui-loadmore__tips weui-loadmore__tips_in-line">已经关注了{{members.length}}个家人</text>
    </view>
